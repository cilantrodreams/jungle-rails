<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @line_items[0].order_id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total Price</th>
          </tr>
        </thead>
        <tbody>
          <% @line_items.each do |line| %>
            <tr>
              <td>
                <%= image_tag line.product.image.tiny %>
              </td>
              <td>
                <h4><%= line.product.name %></h4>
                <br>
                <p><%= line.product.description %></p>
              </td>
              <td>
                <%= humanized_money_with_symbol line.item_price_cents / 100.0 %>
              </td>
              <td>
                <%= line.quantity %>
              </td>
              <td>
                <%= humanized_money_with_symbol line.total_price_cents / 100.0 %>
              </td>
            </tr>
          <% end %>
          <tr>
            <td colspan="5">
              <%= @line_items[0].order.email %> 
            </td>
            <td>
              <%= humanized_money_with_symbol @line_items[0].order.total_cents / 100.0 %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
